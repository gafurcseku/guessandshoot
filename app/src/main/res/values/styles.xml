<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/prawn</item>
        <item name="android:fontFamily">@font/neo_sans</item>
        <item name="colorControlHighlight">#2196F3</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--<style name="MyNumberPickerTheme" parent="android.widget.NumberPicker">-->
        <!--<item name="colorControlNormal">#33691e</item>-->
        <!--<item name="android:background">#b3e5fc</item>-->
    <!--</style>-->
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">@dimen/_20sdp</item>

        <item name="colorControlNormal">#00000000</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="SelectableItemBackground">

        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
