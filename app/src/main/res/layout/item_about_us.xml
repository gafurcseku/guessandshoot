<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:background="@color/blue"
    android:layout_marginRight="@dimen/_15sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_Invite_Friends"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_circle_p"
        android:drawablePadding="@dimen/_7sdp"
        android:text="@string/Invite_Friends"

        android:textColor="@color/prawn"
        android:textSize="@dimen/_15ssp"></TextView>
    <TextView
        android:id="@+id/text_AboutUs"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"

        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:text="@string/text_about_us">

    </TextView>


</LinearLayout>