<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_activity"
    android:layout_height="match_parent"
    tools:context=".Activity.DawrenaDetailsActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingVertical="@dimen/_10sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:text="@string/team_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_right_arrow_1"
            app:tint="@color/white" />

    </FrameLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/profile"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="100"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_weight="83"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="match_parent">

                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:textColor="@color/white"
                                        android:textStyle="bold|italic"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/code"/>
                                    <TextView
                                        android:id="@+id/TV_code"
                                        android:textColor="@color/prawn"
                                        android:textStyle="bold|italic"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="fwfwf"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:padding="@dimen/_2sdp"
                                    android:background="@drawable/shape_btn2"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView


                                        android:layout_marginHorizontal="@dimen/_5sdp"
                                        android:id="@+id/TV_share"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:drawableStart="@drawable/ic_share2"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/share"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:padding="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/shape_btn2"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:paddingHorizontal="@dimen/_5sdp"

                                        android:id="@+id/TV_copy"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:drawableStart="@drawable/ic_copy"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/copy"/>
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>
                        <FrameLayout

                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_gravity="center"
                                app:civ_border_width="@dimen/_1sdp"
                                app:civ_border_color="@color/white"
                                tools:ignore="VectorDrawableCompat" />
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/image_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_7sdp"
                                android:textColor="@color/prawn"
                                android:textSize="22dp"
                                android:background="@drawable/shape_btn_time_end"
                                android:layout_gravity="bottom"
                                android:textStyle="bold"
                                app:srcCompat="@drawable/ic_path"
                                tools:ignore="VectorDrawableCompat" />

                        </FrameLayout>

                        <LinearLayout
                            android:weightSum="100"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="83"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:padding="@dimen/_2sdp"
                                    android:id="@+id/TV_leave"
                                    android:background="@drawable/shape_btn2"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/leave"/>
                                <LinearLayout
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:paddingVertical="@dimen/_2sdp"
                                    android:background="@drawable/shape_btn2"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:src="@drawable/ic_user_team"
                                        app:tint="@color/white" />
                                    <TextView
                                        android:layout_marginHorizontal="@dimen/_2sdp"
                                        android:id="@+id/TV_members"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_9ssp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""/>
                                    <TextView
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_9ssp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/members"/>
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:id="@+id/TV_name"
                        android:textColor="@color/prawn"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20sdp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/linear_Reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/points"
                                android:textColor="@color/white"/>
                            <TextView
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:id="@+id/TV_Point"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/prawn"
                                android:textSize="@dimen/_17sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_35sdp"
                                android:text=""
                                android:background="@drawable/shape_border"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="@dimen/_20sdp"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginEnd="@dimen/_3sdp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/level"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/TV_level"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:textColor="@color/prawn"
                                android:textSize="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_35sdp"
                                android:text=""
                                android:background="@drawable/shape_border" />
                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/rvPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>